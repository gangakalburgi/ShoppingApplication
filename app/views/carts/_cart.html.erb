<h3>Shopping cart</h3>

<table>
		<% @cart.lineitems.each do |item| %>

		<tr>
			<td> <%= item.quantity%> </td>
			<td><%= item.product.name%></td>
			<td class="item_price">  <%= number_to_currency(item.product.price)%> </td>
		</tr>
		<%end%>

		<tr class="total_price">
			<td colspan = "2"> Total </td>
			<td class="total_cell"> <%= number_to_currency(@cart.total_price)%> </td>
		</tr>

</table> 
		 


&nbsp&nbsp&nbsp&nbsp<%= button_to 'Check Out', new_order_path, method: :get %>	
<br>
<br>

&nbsp&nbsp&nbsp&nbsp<%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: 'are you sure you want to empty cart?'}  %>  

 